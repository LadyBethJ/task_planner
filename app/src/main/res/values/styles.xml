<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.TaskPlanner" parent="Base.Theme.TaskPlanner"/>

    <!-- Base application theme. -->
    <style name="Base.Theme.TaskPlanner" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="toolbarStyle">@style/Widget.Shrine.Toolbar</item>
    </style>

    <style name="Widget.Shrine.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@android:color/white</item>
        <item name="android:theme">@style/Base.Theme.TaskPlanner</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <!-- BottomNavigationView styles -->
    <style name="TaskPlanner.BottomNavView" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/bottom_nav_view_height</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">@color/white</item>
        <item name="itemBackground">@drawable/bottom_navigation_bar_item_bg</item>
        <item name="itemIconTint">@drawable/bottom_navigation_icon_selector</item>
        <item name="itemTextColor">@drawable/bottom_navigation_icon_selector</item>
    </style>

    <!-- Toolbar styles -->
    <style name="ToolbarTextAppearance">
        <!--item name="android:fontFamily">sans-serif-condensed</item-->
        <item name="android:textColor">@android:color/white</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:shadowColor">?colorAccent</item>
    </style>

    <style name="ToolbarTextAppearance.Title">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ToolbarTextAppearance.Subtitle">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TaskPlannerToolbar">
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="android:background">?colorPrimary</item>
        <item name="android:elevation">4dp</item>
    </style>

</resources>
