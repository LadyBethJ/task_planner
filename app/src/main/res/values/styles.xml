<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.TaskPlanner" parent="Base.Theme.TaskPlanner"/>

    <!-- Base application theme. -->
    <style name="Base.Theme.TaskPlanner" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="toolbarStyle">@style/Widget.Shrine.Toolbar</item>
    </style>

    <style name="Widget.Shrine.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@android:color/white</item>
        <item name="android:theme">@style/Base.Theme.TaskPlanner</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <!-- BottomNavigationView styles -->
    <style name="TaskPlanner.BottomNavView" parent="Base.TaskPlanner.BottomNavView"/>

    <style name="ThemeOverlay.TaskPlanner.BottomNavView" parent="">
        <item name="colorPrimary">@color/colorAccent</item>
    </style>

    <style name="Base.TaskPlanner.BottomNavView" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/bottom_nav_view_height</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">@color/white</item>
        <item name="itemBackground">@color/white</item>
        <item name="itemIconTint">@color/satori_blue</item>
        <item name="itemTextColor">@color/satori_blue</item>
        <item name="android:theme">@style/ThemeOverlay.TaskPlanner.BottomNavView</item>
    </style>


</resources>
